# App Configuration
NODE_ENV=development
PORT=4000
APP_HOST=0.0.0.0
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgres://voxlink:password@db:5432/voxlink
REDIS_URL=redis://redis:6379

# JWT Authentication
JWT_SECRET=supersecretkey_change_in_production
JWT_EXP=7d
JWT_REFRESH_EXP=30d

# WebSocket
WS_PATH=/ws
WS_CORS_ORIGIN=http://localhost:3000

# TURN/STUN Server (coturn)
TURN_HOST=turn.example.com
TURN_PORT=3478
TURN_USER=turnuser
TURN_PASS=turnpass
TURN_SECRET=your_turn_secret_here

# SMTP (for magic link invites)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=smtpuser
SMTP_PASS=smtppass
SMTP_FROM=noreply@voxlink.com

# File Storage (optional - S3/MinIO)
STORAGE_TYPE=local
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=voxlink-files
S3_REGION=us-east-1

# Monitoring
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development
DEBUG_MODE=false
ENABLE_SWAGGER=true
